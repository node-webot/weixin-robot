#!/usr/bin/env node

var prettyjson = require('prettyjson');

var _ = require('underscore')._

var bootstrap = require('../test/bootstrap');
var makeRequest = bootstrap.makeRequest;

var program = require('commander');

program.version('0.0.1')
  .usage('[options]')
  .option('-l, --location', 'Send a <location> (geo, latlng)')
  .option('-i, --image', 'Send a <image>, provide image url')
  .option('-t, --token [value]', 'Provide weixin token','keyboardcat123')
  .option('-n, --host [value]', 'Set request hostname, defaults to 127.0.0.1', '127.0.0.1')
  .option('-p, --port <n>', 'The port your service is listening to, defaults to 3000', 3000)
  .option('-r, --route <n>', 'The route path, defaults to root path', '')
  .option('-d, --destination [value]', 'The request destination url, will override "host" and "port"')
  .option('-s, --sp [value]', 'The SP ID', 'webot')
  .option('-u, --user [value]', 'The User ID', 'client')
  .parse(process.argv);

//获取参数
var server = program.destination || 'http://' + program.host + ':' + program.port + '/' + program.route;
var info = {
  sp: program.sp,
  user: program.user,
  type: program.location ? 'location' : (program.image ? 'image' : 'text'),
  text: 'help'
}
var sendRequest = makeRequest(server, program.token);

//发送消息
function run(){
  if(info.type=='text'){
    program.prompt('the text: ', function(text){
      console.log('发送文字: %s', text);
      console.log(sendRequest(text || 'help', cb));
    });
  }else if(info.type=='image'){
    program.prompt('the pic url: ', function(pic){
      info.pic = pic;
      console.log('发送图片: %s', info.pic);
      console.log(sendRequest(info, cb));
    });
  }else if(info.type=='location'){
    program.prompt('x: ', function(xPos) {
      info.xPos = xPos
      program.prompt('y:', function(yPos) {
        info.yPos = yPos
        console.log('发送经度: %s, 纬度: %s', info.xPos, info.yPos);
        console.log(sendRequest(info, cb));
      });
    });
  }
}

//显示结果
function cb(err, json){
  if (err){
    console.log(err, json);
  }else{
    console.log('回复结果:');
    console.log(prettyjson.render(json));
    console.log('\n');
  }
  run();
}

console.log('>Target: %s',server)
run()

